<div class="bg-image"
      style="
        background-image: url('https://images.unsplash.com/photo-1479920252409-6e3d8e8d4866?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1290&q=100');
        background-repeat: no-repeat;
        height: 91vh">
  <div style="padding: 3%">
    <h1 style="margin: 0 30% 20px 30%;">Editing Friend</h1>

    <%= render 'form', friend: @friend %>

    <div style="margin: 0 30% 20px 30%;" class="mt-3">
      <%= link_to 'Show', @friend, class:"btn btn-secondary" %>
      <%= link_to 'Delete', @friend, method: :delete, data: { confirm: "Are you sure you want to delete #{@friend.first_name} #{@friend.last_name}?" }, class:"btn btn-danger" %>
      <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
    </div>
  </div>
</div
